<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <Button
        android:id="@+id/btnCreatePlaylist"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/create_playlist"
        android:textSize="14sp"
        android:textColor="@color/background_color"
        android:fontFamily="@font/ys_text_medium"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:cornerRadius="@dimen/fifty_four"
        android:layout_marginTop="12dp"
        android:stateListAnimator="@null"
        android:backgroundTint="@color/the_color_of_the_refresh_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlistsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnCreatePlaylist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnCreatePlaylist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/image_stub_playlists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mode" />

        <TextView
            android:id="@+id/tvStubPlaylists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/stub_playlists"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/textColorPrimary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


