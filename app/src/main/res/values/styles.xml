<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>

        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="CommonButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/padding_large</item>
        <item name="android:textSize">@dimen/text_size_twenty_two</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_medium</item>
        <item name="iconTint">@color/black</item>
    </style>

</resources>